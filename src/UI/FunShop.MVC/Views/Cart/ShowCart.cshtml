@model IEnumerable<FunShop.Core.services.ItemCart>

@{ 
    int total = 0;
}



<div class="container mb-4">
    <div class="row">
        <div class="col-md-12 col-lg-10 col-xl-8 mx-auto">
            <div class="table-responsive">
                @if (Model != null)
                {
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col"> </th>
                                <th scope="col">Product</th>
                                <th scope="col">Available</th>
                                <th scope="col" class="text-center">Quantity</th>
                                <th scope="col" class="text-right">Price</th>
                                <th> </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var el in Model)
                            {
                                <tr>
                                    <td><img src="~/images/@el.ImageName" class="img-thumbnail" style="width:50px;height:50px;"/> </td>
                                    <td>@el.Name</td>
                                    <td>In stock</td>
                                    <td>
                                        <a asp-action="DeletFromCart" asp-controller="Cart" asp-route-id="@el.ProductId" class="btn btn-danger">
                                            <i class="fas fa-sort-down  fx-1"></i>
                                        </a>

                                        <span class="text-black-50">@el.Qty</span>
                                        <a asp-action="AddFromCart" asp-controller="Cart" asp-route-id="@el.ProductId" class="btn btn-success">
                                            <i class="fas fa-sort-up  fx-1"></i>
                                        </a>
                                    </td>
                                    <td class="text-right">@el.Price</td>
                                    <td class="text-right">@(el.Price * el.Qty)</td>


                                </tr>
                                    total += (el.Price * el.Qty);
                            }

                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td><strong>Total</strong></td>
                                <td class="text-right"><strong> @total</strong></td>
                            </tr>
                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td>pay</td>
                                <td class="text-right">
                                    <a asp-action="index" asp-controller="order" class="btn  btn-block btn-success ">Checkout</a>
                                </td>
                            </tr>
                        </tbody>
            </table>
            }
            else
            {
            <h2 class="lead text-center">cart is empty</h2>
            }
            </div>
        </div>
    </div>
</div>